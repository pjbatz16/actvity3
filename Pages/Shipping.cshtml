@page
@model myfirstproject.Pages.ShippingModel
@{
}

<div class="container">;
    
        <h1>Shipping Address</h1>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label>FirstName</label>
                <input class="form-control" asp-for="Shipping.FirstName" />
            </div>
            <div class="form-group">
                <label>LastName</label>
                <input class="form-control" asp-for="Shipping.LastName" />
            </div>
            <div class="form-group">
                <label>Company</label>
                <input class="form-control" asp-for="Shipping.Company" />
            </div>
            <div class="form-group">
                <label>Address</label>
                <input class="form-control" asp-for="Shipping.Address" />
            </div>
            <div class="form-group">
                <label>City</label>
                <input class="form-control" asp-for="Shipping.City" />
            </div>
            <div class="form-group">
                <label>PostalCode</label>
                <input class="form-control" asp-for="Shipping.PostalCode" />
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input class="form-control" asp-for="Shipping.Phone" />
            </div>
            <button class="btn btn-primary btn-block" type="submit">Save</button>
        </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Shipping Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Company</th>
            <th>Address</th>
            <th>City</th>
            <th>PostalCode</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shipping in Model.Shippings)
        {
            <tr>
                <td>@shipping.ShippingId</td>
                <td>@shipping.FirstName</td>
                <td>@shipping.LastName</td>
                <td>@shipping.Company</td>
                <td>@shipping.Address</td>
                <td>@shipping.City</td>
                <td>@shipping.PostalCode</td>
                <td>@shipping.Phone</td>
            </tr>
        }
        {

        }
        {

        }
        {

        }
    </tbody>
</table>